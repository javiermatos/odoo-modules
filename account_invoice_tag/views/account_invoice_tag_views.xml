<odoo>
    <!-- List view -->
    <record id="account_invoice_tag_view_list" model="ir.ui.view">
        <field name="name">account.invoice.tag.list</field>
        <field name="model">account.invoice.tag</field>
        <field name="arch" type="xml">
            <list string="Invoice Tags" editable="bottom">
                <field name="name" />
                <field name="color" widget="color_picker" />
                <field name="deprecated" widget="boolean_toggle" />
                <field name="create_date" readonly="1" />
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="account_invoice_tag_view_form" model="ir.ui.view">
        <field name="name">account.invoice.tag.form</field>
        <field name="model">account.invoice.tag</field>
        <field name="arch" type="xml">
            <form string="Invoice Tag">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" widget="color_picker" />
                        <field name="deprecated" widget="boolean_toggle" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="account_invoice_tag_view_search" model="ir.ui.view">
        <field name="name">account.invoice.tag.search</field>
        <field name="model">account.invoice.tag</field>
        <field name="arch" type="xml">
            <search string="Invoice Tags">
                <field name="name" />
                <filter
                    string="Active"
                    name="active"
                    domain="[('deprecated', '=', False)]"
                />
                <filter
                    string="Deprecated"
                    name="deprecated"
                    domain="[('deprecated', '=', True)]"
                />
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_account_invoice_tag" model="ir.actions.act_window">
        <field name="name">Invoice Tags</field>
        <field name="res_model">account.invoice.tag</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"search_default_active": 1}</field>
        <!--
        <field name="domain">[]</field>
        <field name="context">{}</field>
        -->
    </record>

    <!-- Menu item under Accounting > Configuration -->
    <menuitem
        id="menu_account_invoice_tag"
        name="Invoice Tags"
        parent="account.menu_account_config"
        action="action_account_invoice_tag"
        sequence="100"
        groups="account.group_account_manager"
    />
</odoo>
