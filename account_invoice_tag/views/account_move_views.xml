<odoo>
    <record id="view_invoice_search_invoice_tag" model="ir.ui.view">
        <field name="name">account.invoice.search (in account_invoice_tag)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_tag_ids" string="Tag" />
            </xpath>
            <xpath expr="//filter[@name='myinvoices']" position="before">
                <filter
                    name="has_invoice_tags"
                    string="With Tags"
                    domain="[('invoice_tag_ids', '!=', False)]"
                />
                <separator />
            </xpath>
            <xpath expr="//filter[@name='accounting_date']" position="after">
                <filter
                    name="group_by_invoice_tags"
                    string="Tags"
                    context="{'group_by': 'invoice_tag_ids'}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_invoice_list_invoice_tag" model="ir.ui.view">
        <field name="name">account.invoice.list (in account_invoice_tag)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field
                    name="invoice_tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_open': True}"
                    string="Tags"
                    optional="show"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_form_invoice_tag" model="ir.ui.view">
        <field name="name">account.move.form (in account_invoice_tag)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field
                    name="invoice_tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_open': True}"
                    invisible="move_type not in ['out_invoice', 'out_refund', 'in_invoice', 'in_refund']"
                    readonly="state != 'draft'"
                />
            </xpath>
        </field>
    </record>
</odoo>
